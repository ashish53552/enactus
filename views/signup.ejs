<%- include('partials/header') %>

<!-- Sign up form -->
<section class="signup">
  <div class="container">
    <div class="signup-content">
      <div class="signup-form">
        <h2 class="form-title">Sign up</h2>
        <form autocomplete="off" method="POST" action="/signup" class="register-form" id="register-form">
          <div class="form-group">
            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
            <input type="text" name="name" id="name" placeholder="Your Name" />
          </div>
          <div class="form-group">
            <label for="email"><i class="zmdi zmdi-email"></i></label>
            <input autocomplete="off" type="text" name="username" id="username" placeholder="Your Email or Phone No" />
          </div>
          <div class="form-group">
            <label for="adress"><i class="zmdi zmdi-email"></i></label>
            <input autocomplete="off" type="text" name="address" id="address" placeholder="Your Address" />
          </div>
          <div class="form-group">
            <label autocomplete="off" for="pass"><i class="zmdi zmdi-lock"></i></label>
            <input type="password" name="password" id="password" placeholder="Password" />
          </div>
          <div class="form-group">
            <input autocomplete="off" type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in <a href="#" class="term-service">Terms of service</a></label>
          </div>
          <div class="form-group form-button">
            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
          </div>
        </form>
      </div>
      <div class="signup-image">
        <figure><img src="images/signup-image.jpg" alt="sing up image"></figure>
        <a href="/" class="signup-image-link">I am already member</a>
      </div>
    </div>
  </div>
</section>



<%- include('partials/footer') %>
